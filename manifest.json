{
    "manifest_version": 3,
    "name": "LeShrine",
    "version": "1.0",
    "description": "Replace ads with images of LeBron James.",
    "permissions": ["activeTab", "scripting", "storage", "declarativeNetRequest"],
    "host_permissions": ["<all_urls>"],
    "declarative_net_request":{
      "rule_resources": [
        {
          "id": "block-ads",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "web_accessible_resources": [
      {
        "resources": ["/media/image/blockedByJames.jpg"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "/media/image/leSunShine.jpg",
      "128": "/media/image/leSunShine.jpg"
    },
    "chrome_url_overrides": {
      "newtab": "index.html"
    }
  }
  